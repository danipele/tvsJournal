<div class="devise-form">
  <h2>sign up</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

    <div class="field margin-top">
      <%= f.label :email, 'email' %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>

    <div class="field margin-top">
      <%= f.label :password, 'password' %><br />
      <%= f.password_field :password, autocomplete: "new-password" %>
    </div>

    <div class="field margin-top">
      <%= f.label :password_confirmation, 'password confirmation' %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
    </div>

    <div class="field margin-top">
      <%= f.label :first_name, 'first name' %><br />
      <%= f.text_field :first_name, autocomplete: "first-name" %>
    </div>

    <div class="field margin-top">
      <%= f.label :last_name, 'last name' %><br />
      <%= f.text_field :last_name, autocomplete: "last-name" %>
    </div>

    <div class="actions margin-top">
      <%= f.submit "sign up", class: 'btn btn-outline-light submit-btn align-center' %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
