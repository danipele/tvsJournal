<div class="links">
  <%- if controller_name != 'sessions' %>
    <%= link_to "log in", new_session_path(resource_name), class: 'link' %>
  <% end %>

  <%- if devise_mapping.registerable? && controller_name == 'sessions' %>
    <%= link_to "sign up", new_registration_path(resource_name), class: 'link' %>
  <% end %>

  <%- if devise_mapping.recoverable? && controller_name == 'sessions' %>
    <%= link_to "forgot your password?", new_password_path(resource_name), class: 'link' %>
  <% end %>

  <%- if devise_mapping.confirmable? && controller_name == 'sessions' %>
    <%= link_to "didn't receive confirmation instructions?", new_confirmation_path(resource_name), class: 'link' %>
  <% end %>

  <%- if devise_mapping.omniauthable? %>
    <%- resource_class.omniauth_providers.each do |provider| %>
      <%= link_to "sign in with #{OmniAuth::Utils.camelize(provider)}", omniauth_authorize_path(resource_name, provider), class: 'link' %>
    <% end %>
  <% end %>
</div>
